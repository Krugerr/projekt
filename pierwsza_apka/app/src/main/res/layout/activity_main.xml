<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.grzegorz.pierwsza_apka.MainActivity">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/NIEBIESKI"
        android:text="@string/NIEBIESKI"
        android:textStyle="bold"
        />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CZERWONY"
        android:text="@string/CZERWONY"
        android:textStyle="bold"

        />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ZOLTY"
        android:text="@string/ZOLTY"
        android:textStyle="bold"

        />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SZARY"
        android:text="@string/SZARY"
        android:textStyle="bold"

        />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ZIELONY"
        android:text="@string/ZIELONY"
        android:textStyle="bold"
        />



</LinearLayout>
